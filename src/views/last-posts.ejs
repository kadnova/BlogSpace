<body>
	<header class="header">
		<div class="name-container">
			<span class="blog-name" >
			<span class="name-first">GOODBYE</span> <span class="name-second">MOONMEN</span>
			</span>
		</div>
	</header>
	
	<div class="main">
		<div class="middle">
			<aside class="sidebar">		
				<nav class="menu">
					<span><a href="last-posts">Last posts</a></span>
					<% nav.forEach( function(item){%>
						<li><a href="<%= item.Link%>" class="last-post"><%= item.Text %></a></li>	
						<% }) %>
				<span>Posts summary: <span>7</span></span>
				</nav>
			</aside>

			<div class="posts-container">
				<% lastposts.forEach( function(item){ %>
				<div class="post">
				<span class="post-header">
					<%=item.title%>
				</span>
					<p>
					<%=item.content%>
					</p>
				</div>
				<%})%>
			</div>
			
			
		</div>
		
		
	</div>
</body>
